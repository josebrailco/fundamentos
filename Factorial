#include <iostream>

using namespace std;

int main()
{
    int n, mult=1, i;
    
    do {
        cout << "Ingrese hasta que numero desea multiplicar: ";
        cin >> n;
        if (n <= 0)
            cout << "Ingrese un numero mayor a 0." << endl;
    } while (n <= 0);

    for (i=2; i<=n; i++)
    { 
        mult = mult * i;
    }

    cout << "El factorial de "<< n << " es: " << mult;

    return 0; 
}
