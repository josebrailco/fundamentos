#include <iostream>

using namespace std;

int main()
{
    int base, altura, area;
    cout<<"Ingresar la base del triangulo:";
    cin>>base;
    
    cout<<"Ingresar la altura del triangulo:";
    cin>>altura;
    
    area= base * altura / 2;
    cout<<"El area del triangulo es:"<<area;

    return 0;
}
