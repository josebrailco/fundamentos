#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    float lado, perimetro, area;
    cout<<"Ingrese lado del cuadrado: ";
    cin>> lado;
    perimetro= 4*lado;
    area= pow(lado,2);
    cout<<"El perimetro es: "<<perimetro<<"cm"<<endl;
    cout<<"El area del cuadrado es: "<< area<<" cm2"<<endl;

    return 0;
}
